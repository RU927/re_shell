GIT_HOME=$HOME/REPOS
export GIT_HOME

DOT_INST=$GIT_HOME/re_inst
export DOT_INST


DOT_SHELL=$GIT_HOME/re_shell
BIN_SHELL=$DOT_SHELL/bin
export DOT_SHELL
export BIN_SHELL


DOT_RUN=$GIT_HOME/re_run
BIN_RUN=$DOT_RUN/bin
if [ -d $DOT_RUN ]; then
  export DOT_RUN
  export BIN_RUN
fi

DOT_NET=$GIT_HOME/re_net
BIN_NET=$DOT_INST/bin
if [ -d $DOT_NET ] ; then
  export DOT_NET
  export BIN_NET
fi



appendToPath "$DOT_NET"
