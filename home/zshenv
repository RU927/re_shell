# appendToPath "$BIN_RUN"

for d in $(command du "$BIN_SHELL" | cut -f2); do
	if [ -d "$d" ]; then
		appendToPath "$d"
	fi
done

for d in $(command du "$BIN_RUN" | cut -f2); do
	if [ -d "$d" ]; then
		appendToPath "$d"
	fi
done

